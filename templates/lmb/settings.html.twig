{% extends 'base.html.twig' %}
{% block title %}Paramètres{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des paramètres</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>id</th>
                <th>Prix de Revente unitaire</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for Setting in setting %}
            <tr>
                <th>{{Setting.id}}</th>
                <th>{{Setting.reventeUnitaire}}</th>
                <th>
                        <a href="#" class="btn btn-primary" title="Modifier"><i class="fa fa-edit"></i></a>
                        <a href="#" class="btn btn-danger" title="Supprimer"><i class="fa fa-trash"></i></a>
                </th>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}