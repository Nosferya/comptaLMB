{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des Utilisateurs</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Date d'inscription</th>
                <th>Grade</th>
                <th>Nickname</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for User in ads %}
            <tr>
                <td>{{User.id}}</td>
                <td>{{User.prenomUser}}</td>
                <td>{{User.nomUser}}</td>
                <td>{{User.telUser}}</td>
                <td>{{User.dateInscription | date('d/m/Y')}}</td>
                <td>{{User.Grade.nomGrade}}</td>
                <td>{{User.Nickname}}</td>
                <td>
                    <a href="{{ path('admin_user_edit', {'id': User.id})}} " class="btn btn-primary"><i class="fa fa-edit"></i></a>
                    <a href="{{ path('admin_user_delete', {'id':User.id})}}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>


<h2 class="my-5">Ajouter un Utilisateur</h2>
{{form_start(form)}}
{{form_widget(form)}}
<button type="submit" class="btn btn-success">Enregistrer</button>
{{form_end(form)}}

{% endblock %}