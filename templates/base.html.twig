<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Compta LMB{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://bootswatch.com/4/spacelab/bootstrap.min.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
      {% if app.request.get('_route')!= 'login' %}
        
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                    <a class="navbar-brand" href="/">Compta LMB</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                    </button>
                  
                    <div class="collapse navbar-collapse" id="navbarColor01">
                      <ul class="navbar-nav mr-auto">
                        <li class="nav-item ">
                          <a class="nav-link" href="{{path ('saisie')}}">Saisie</a>
                        </li>
                        {% if app.user.roles[0]== "admin" or app.user.roles[0]== "comptable" %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{path ('primes')}}">Primes</a>
                        </li>
                        {% endif %}
                        {% if app.user.roles[0]== "admin" or app.user.roles[0]=="DRH" %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{path ('admin')}}">Utilisateurs</a>
                        </li>
                        {% endif %}
                        {% if app.user.roles[0]== "admin" %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{path ('grades')}}">Grades</a>
                        </li>
                        
                        <li class="nav-item">
                          <a class="nav-link" href="{{path ('settings')}}">Settings</a>
                        </li>
                        {% endif %}
                        {% if app.user.roles[0]== "admin" %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{path ('historique')}}">Historique</a>
                        </li>
                        {% endif %}
                      </ul>
                    </div>
                  </nav>
                  {% endif %}
                  <div class="container">


                    {% for label, messages in app.flashes %}
                    <div class="container">
                      <div class="alert alert-{{ label }}">
                        {% for message in messages %}
                        <p>{{ message | raw }}</p>
                        {% endfor %}
                      </div>
                    </div>
                    {% endfor %}
                    

                    
                    {% block body %}{% endblock %}
                  </div>
                  {% block javascripts %}
                  
                  <script src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>
                  <script src="https://bootswatch.com/_vendor/popper.js/dist/umd/popper.min.js"></script>
                  <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
                  
                </body>
                {% endblock %}
</html>
